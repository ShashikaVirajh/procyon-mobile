{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@enums/*": ["./src/enums/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["./src/screens/*"],
      "@theme": ["./src/theme"],
      "@type/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@library/*": ["./src/library/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".eslintrc"],
  "exclude": ["node_modules"]
}
